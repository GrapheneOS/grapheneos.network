#!/bin/bash

set -o errexit -o nounset -o pipefail

source venv/bin/activate

touch lock
exec {fd}< lock
if ! flock -n $fd; then
    echo already deploying >&2
    exit 1
fi

gixy nginx/nginx.conf

servers=({0..2}.grapheneos.network)

for server in ${servers[@]}; do
    echo $server

    remote=root@$server

    rsync -ptcv --fsync --chmod=644 nginx/{nginx.conf,mime.types} $remote:/etc/nginx/
    ssh $remote nginx -s reload

    echo
done
